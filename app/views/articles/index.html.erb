<h1>All Articles</h1>

<ul id="articles">
  <% @articles.each do |article| %>
    <li class="d-flex">
      <%= link_to article.title, article_path(article),
    class: 'article_title', id: "article_#{article.id}" %>
    </li>
  <% end %>
</ul>

<%= link_to "Create a New Article", new_article_path, class: "new_article text-danger" %>
